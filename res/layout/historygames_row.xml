<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:padding="10dp"
               android:id="@+id/imgRowHero"
               android:src="@drawable/item_lg_loading"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/imgRowHero"
                  android:layout_centerVertical="true"
                  android:orientation="vertical">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/txtRowGameMode"
                  android:textColor="@android:color/black"
                  android:text="test"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/txtRowDate"
                  android:textColor="@android:color/black"
                  android:paddingRight="5dp"
                  android:text="test"/>

    </LinearLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/txtRowVictoryLoss"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:textSize="20dp"
              android:paddingRight="10dp"
              android:text="victory/loss"/>

</RelativeLayout>