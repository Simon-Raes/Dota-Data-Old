<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent" android:layout_height="wrap_content"
                android:background="@drawable/draw_button_record">

    <ImageView android:layout_width="@dimen/matches_list_row_hero_image_width" android:layout_height="wrap_content"
               android:id="@+id/imgTestHero"
               android:layout_alignParentLeft="true"
               android:src="@drawable/item_lg_unknown"
               android:paddingLeft="5dp"
               android:paddingRight="5dp"
               android:adjustViewBounds="true"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/imgTestNext"
               android:src="@drawable/ic_action_next_item"
               android:layout_alignParentRight="true"
               android:paddingLeft="5dp"
               android:paddingRight="5dp"
               android:layout_centerVertical="true"
               android:adjustViewBounds="true"/>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_toLeftOf="@id/imgTestNext"
                  android:gravity="center"
                  android:layout_centerInParent="true"
                  android:layout_toRightOf="@id/imgTestHero">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/txtTestRecord"
                  android:textSize="15sp"
                  android:text="Most hero damage: 999999"                  />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/txtTestGameMode"
                  android:textSize="12sp"
                  android:layout_below="@id/txtTestRecord"
                  android:text="All random (2 weeks ago)"
                  android:layout_toRightOf="@id/imgTestHero"/>

    </LinearLayout>


</RelativeLayout>