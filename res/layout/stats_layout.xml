<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                android:id="@+id/svStats"
                android:background="@color/Gainsboro">

        <!-- Scrollview content -->
        <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                      android:orientation="vertical"
                      android:gravity="center">
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:layout_marginRight="20dp"
                          android:layout_marginTop="10dp"
                          android:orientation="vertical"
                          android:layout_marginBottom="5dp"
                          android:background="@drawable/bg_card">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/txtStatsGamesPlayed"
                          android:text="Games played"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/txtStatsWinrate"
                          android:text="Winrate"/>
                <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/txtStatsLongestGame"
                        android:text="Longest game"/>
                <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/txtStatsMostKills"
                        android:text="Most kills"/>
                <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/txtStatsMostDeaths"
                        android:text="Most deaths"/>
                <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/txtStatsMostAssists"
                        android:text="Most assists"/>
                <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/txtStatsMostLastHits"
                        android:text="Most last hits"/>
                <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/txtStatsMostDenies"
                        android:text="Most denies"/>
                <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/txtStatsMostGold"
                        android:text="Most gold"/>
                <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/txtStatsMostGPM"
                        android:text="Highest GPM"/>
                <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:id="@+id/txtStatsMostXPM"
                        android:text="Highest XPM"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:layout_marginRight="20dp"
                          android:layout_marginTop="10dp"
                          android:orientation="vertical"
                          android:layout_marginBottom="5dp"
                          android:background="@drawable/bg_card">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="TODO: averages"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                          android:layout_marginLeft="20dp"
                          android:layout_marginRight="20dp"
                          android:layout_marginTop="10dp"
                          android:orientation="vertical"
                          android:layout_marginBottom="5dp"
                          android:background="@drawable/bg_card">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="TODO: graphs"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- loadingindicator -->
    <ProgressBar android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/pbStats"
                 android:indeterminate="true"
                 android:visibility="gone"
                 style="?android:attr/progressBarStyleLarge"
                 android:layout_centerInParent="true"/>
</RelativeLayout>