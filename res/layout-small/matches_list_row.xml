<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/imgRowHero"
               android:maxWidth="80dp"
               android:padding="10dp"
               android:adjustViewBounds="true"
               android:src="@drawable/item_lg_unknown"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:id="@+id/imgFavourite"
               android:visibility="gone"
               android:src="@drawable/ic_action_important_color"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/imgRowHero"
                  android:layout_centerVertical="true"
                  android:orientation="vertical">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/txtRowGameMode"
                  android:textColor="@android:color/black"
                  android:textSize="12dp"
                  android:text="test"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/txtRowDate"
                  android:textColor="@android:color/black"
                  android:textSize="12dp"

                  android:paddingRight="5dp"
                  android:text="test"/>

    </LinearLayout>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/txtRowVictoryLoss"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:textSize="14dp"
              android:paddingRight="10dp"
              android:text="victory/loss"/>

</RelativeLayout>