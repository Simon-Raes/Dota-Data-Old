<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:background="@color/Gainsboro">


    <!-- Scrollview content (must be 1 layout) -->
    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
                  android:orientation="vertical"
                  android:gravity="center">

        <!-- Match info -->
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/bg_card">

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/imgLiveLeagueDetailsRadiantLogo"
                       android:layout_alignParentLeft="true"
                       android:maxWidth="100dp"
                       android:adjustViewBounds="true"
                       android:layout_centerVertical="true"
                       android:layout_margin="10dp"/>

            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_centerHorizontal="true"
                          android:layout_below="@id/imgLiveLeagueDetailsRadiantLogo"
                          android:gravity="center"
                          android:orientation="vertical">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="team vs team"
                          android:id="@+id/txtLiveLeagueTeams"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/txtLiveLeagueLeague"
                          android:text="leagueID"/>
            </LinearLayout>

            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:id="@+id/imgLiveLeagueDetailsDireLogo"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:adjustViewBounds="true"
                       android:maxWidth="100dp"
                       android:layout_margin="10dp"/>

        </RelativeLayout>

        <!-- Scrollview containing radiant and dire player cards-->
        <HorizontalScrollView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:scrollbars="none">

            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">

                <!-- Radiant players card-->
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/layLiveLeagueRadiantPlayers"
                              android:layout_marginLeft="20dp"
                              android:layout_marginRight="20dp"
                              android:layout_marginTop="10dp"
                              android:layout_marginBottom="5dp"
                              android:orientation="vertical"
                              android:background="@drawable/bg_card">

                    <View style="@style/Divider"/>
                </LinearLayout>

                <!-- Dire players card-->
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:id="@+id/layLiveLeagueDirePlayers"
                              android:layout_marginLeft="20dp"
                              android:layout_marginRight="20dp"
                              android:layout_marginTop="10dp"
                              android:layout_marginBottom="5dp"
                              android:orientation="vertical"
                              android:background="@drawable/bg_card">

                    <View style="@style/Divider"/>
                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Spectators info -->
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginBottom="5dp"
                      android:orientation="vertical"
                      android:background="@drawable/bg_card">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/txtLiveLeagueCasters"
                      android:text="@string/txtLiveLeagueGame_Casters"/>

            <View style="@style/Divider"/>

            <!-- spectators/casters added to this layout -->
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/layLiveLeagueSpectators"
                          android:orientation="vertical"/>


            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/txtLiveLeagueSpectatorCount"
                      android:text="### Dota TV spectators"/>

        </LinearLayout>

        <!-- Map: tower and barracks status -->
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginBottom="5dp"
                      android:orientation="vertical"
                      android:paddingTop="20dp"
                      android:paddingBottom="20dp"
                      android:gravity="center"
                      android:background="@drawable/bg_card">
            <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                         android:id="@+id/layLiveLeagueMinimap">
                <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content"
                           android:id="@+id/imgLiveLeagueMinimap"
                           android:adjustViewBounds="true"
                           android:src="@drawable/dota_minimap_sd"/>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>

